!cpu 6502
!to "build/PRELAUNCH/DRELBS",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $813
         jsr   $800       ; decompress
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $1cb0      ; patch - don't decrease lives
+
         lda   #$82       ; READ_ROM_NO_WRITE
         sta   $101
         lda   #$A6
         sta   $104
         lda   #$FA
         sta   $105       ; update TR hook to reboot
         +READ_RAM2_WRITE_RAM2
         lda   #0
         sta   $FFFC
         lda   #1
         sta   $FFFD      ; LC reset vector fix
         +DISABLE_ACCEL
         jmp   $8000

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
