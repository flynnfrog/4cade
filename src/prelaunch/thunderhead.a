!cpu 6502
!to "build/PRELAUNCH/THUNDERHEAD",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #<callback
         sta   $2046
         lda   #>callback
         sta   $2047
         jmp   $800        ; decompress

callback
         +LC_REBOOT
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         inc   $45FA      ; patch - don't decrease energy
+
         jsr   DisableAccelerator
         jmp   $204B

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
